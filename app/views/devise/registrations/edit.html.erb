<%= render partial: "shared/header" %>

<% breadcrumb :email_password %>
<%= render partial: "shared/breadcrumbs" %>
<a href="/products/new" class="exhibit-btn">
  <h2 class="exhibit-text">出品</h2>
  <i class="fas fa-camera"></i>
</a>

<div class = "edit-main-countainer">
  <%= render partial: "shared/sidebar" %>

  <div class = "user-edit-all-countainers">
    <div class = "email__password__vocaburary">
      メール/パスワード


<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
<div class = "form-box">
        <div class = "edit-text-box">
          <h3 class = "edit-headings">メールアドレス</h3>
        </div>
          <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"user-edit-forms" %>
<div class="vocaburary__change-items">メールアドレスを変更すると確認メールが送信されます。メール内のURLをクリックすると変更完了です。</div>
      </div>


<div class = "form-box">
        <div class = "edit-text-box">
          <h3 class = "edit-headings">現在のパスワード</h3>
        </div>
         <%= f.password_field :current_password, autocomplete: "current-password",class:"user-edit-forms" %>
      </div>


<div class = "form-box">
        <div class = "edit-text-box">
          <h3 class = "edit-headings">新しいパスワード</h3>
        </div>
           <%= f.password_field :password, autocomplete: "new-password",class:"user-edit-forms" %>
      </div>


<div class = "form-box">
        <div class = "edit-text-box">
          <h3 class = "edit-headings">新しいパスワード確認</h3>
        </div>
        <%= f.password_field :password_confirmation, autocomplete: "new-password",class:"user-edit-forms" %>
       <div class="vocaburary__change-items">パスワードを設定したい場合は上記をすべて入力してください。（設定しない場合は空欄）</div>
      </div>
 <button class = "edit-sign-up-btns" type = "submit">
        変更する
      </button>
<% end %>



      
    </div>

