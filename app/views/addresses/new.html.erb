<head>
<link rel="stylesheet" href="signup.css">
</head>
<body>
<div class="signup__main__container">
<div class="signup__main__header"><img class="mercari__image__css" src="https://www-mercari-jp.akamaized.net/assets/img/common/common/logo.svg?3296506464">
<nav class="progress-bar signup-bar">
<div class="mercari__border__normal "></div>
<div class="mercari__border3"></div>
    <ol class="clearfix">
      <li class="active li-none">
        <span style="color: #888;">会員情報</span>
        <div class="progress-status"></div>
      </li>
      <li class="active li-none">
        <span style="color: #888;">電話番号認証</span>
        <div class="progress-status"></div>
      </li>
      <li class="active li-none ">
        <span class="address__number__user__information">お届け先住所入力</span>
        <div class="progress-status send__progress__box"></div>
      </li>
      <li class="li-none">
        支払い方法
        <div class="progress-status pay__status__box"></div>
      </li>
      <li class="li-none">
                  完了
                  <div class="progress-status"></div>
      </li>
    </ol>
  </nav>
</div>
<%# ややこいところ %>

  
  

  
<%= form_for(@address,method: :post) do |f| %>
<div class="signup__main__contents">
<div class="field user__information user__push__button a">
        お届け先住所入力
      </div>

      <div class="field__user__information__main">
<div class="field user__nickname devise__add__input devise__add__input__box">
  <div class="field user__nickname">
    <div class="user__nickname__box">
    <div class="user__error__text"><label class="user__position">郵便番号</label><span class="form__user__name">必須</span><br></div>
    <%= f.text_field :area_number, autofocus: true ,placeholder: '例)123-4567',class:"user__bottom__input__box2" %>
   </div>
  </div>

  <div class="field user__nickname">
    <div class="user__nickname__box">
    <div class="user__error__text"><label class="user__position">都道府県</label><span class="form__user__name">必須</span><br></div>
    <%= f.text_field :prefecture, autofocus: true ,placeholder: '北海道',class:"user__bottom__input__box2" %>
    </div>
  </div>

  <div class="field user__nickname">
    <div class="user__nickname__box">
    <div class="user__error__text"><label class="user__position">市区町村</label><span class="form__user__name">必須</span><br></div>
    <%= f.text_field :municipalities, autofocus: true ,placeholder: '例) 横浜市緑区',class:"user__bottom__input__box2" %></div>
  </div>

   <div class="field user__nickname">
    <div class="user__nickname__box">
    <div class="user__error__text"><label class="user__position">番地</label><span class="form__user__name">必須</span><br></div>
     <%= f.text_field :address_number, autofocus: true ,placeholder: '例) 青山1-1-1',class:"user__bottom__input__box2" %></div>
  </div>

  <div class="field user__nickname">
    <div class="user__nickname__box">
    <div class="user__error__text"><label class="user__position">建物名</label><span class="form__user__name">任意</span><br></div>
     <%= f.text_field :building, autofocus: true ,placeholder: '例) 柳ビル103',class:"user__bottom__input__box2" %></div>
  </div>

<div class="field ">
   <div class="field user__nickname">
    <div class="user__nickname__box">
    <div class="user__error__text"><label class="user__position">電話</label><span class="form__user__name">任意</span><br></div>
    <%= f.text_field :tel_number, autofocus: true ,placeholder: '例) 09012345678',class:"user__bottom__input__box2" %></div>
  </div>
  </div>
  
  
  </div>
      <br>
</div>

  

<%= f.submit "次へ進む",class:"next__stage3 next__button__red" %>


<% end %>

<%= render 'devise/registrations/footer'%>
</body>