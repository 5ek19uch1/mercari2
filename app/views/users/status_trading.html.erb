<div class="credit-wrapper">
  <div class="profile__body__side">
    <%= render partial: "shared/sidebar" %>
  </div>
  <div class="status__body">
    <div class="status__body__header">
      出品した商品
    </div>
    <div class="status__body__tab">
      <%= link_to "/users/:user_id/status_selling", class:"status__body__tab__off" do%>
      出品中
      <% end %>
      <%= link_to "/users/:user_id/status_trading", class:"status__body__tab__on" do%>
      取引中
      <% end %>
      <%= link_to "/users/:user_id/status_sold", class:"status__body__tab__off" do%>
      売却済み
      <% end %>
    </div>


<% if @item.present? %>

    <% @item.each do |item| %>
      <%= link_to "/products/show" do %>
        <div class="status__body__items" id="list-items">
          <%= image_tag "#{item.item_images[0].image}", class:"status__body__items__image" %>
          <div class="status__body__items__name"><%= item.text%></div>
          <div class="status__body__items__icons">
            <i class="fas fa-chevron-right" id="items-right"></i>
          </div>
        </div>
      <% end %>
    <% end %>

<% else %>

    <div class="status__body__no-item">
      <img src ="/assets/mercari-gray" id="status-no-item">
      <div class="status__body__no-item__text">取引中の商品はありません</div>
    </div>

<% end %>

  <%=link_to "", class: "status__body__page-left" do %>
    <i class="fas fa-chevron-left" id="page-left"></i>
  <% end %>
  <%=link_to "", class: "status__body__page-right" do %>
    <i class="fas fa-chevron-right" id="page-right"></i>
  <% end %>
  </div>
</div>
<%= render partial: "shared/footer" %>